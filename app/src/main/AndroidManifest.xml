        android:supportsRtl="true"
        android:theme="@style/Theme.Study_app">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Deadline.MainDeadLine"></activity>
        <activity
            android:name=".ui.Notes.NotesActivity"></activity>
        <activity
            android:name=".ui.Notes.InputNoteActivity"></activity>
        <activity
            android:name=".ui.Notes.Model.NotesDetailActivity"></activity>
        <activity
            android:name=".ui.Deadline.InputDeadlineActivity"></activity>
    </application>

</manifest>