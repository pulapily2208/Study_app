<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:scrollbars="horizontal"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/item_bulk_background">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="1"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/circle_background" />

        <EditText
            android:id="@+id/et_ma_hp"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:hint="Mã HP"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/et_ten_gv"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:hint="Giảng viên"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_ngay_bat_dau"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:hint="Ngày BĐ"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/et_phong_hoc"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:hint="Phòng"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/view_mau_sac"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp">

            <View
                android:id="@+id/inner_view_mau_sac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</HorizontalScrollView>
