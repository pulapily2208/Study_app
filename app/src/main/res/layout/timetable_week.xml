            android:id="@+id/tvTitle"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:src="@drawable/tranh_study"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
          />

        <!-- SEARCH ICON BÊN PHẢI -->
        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search"
            android:layout_gravity="end|center_vertical"
            android:padding="6dp"
            android:layout_marginRight="20dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- LỊCH THÁNG -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/monthCalendar"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:background="@color/beige"
        android:padding="8dp"
        app:mcv_showOtherDates="all"

        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- ngay duoc chon  -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thursday, 05 Jan, 2024"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/bg_selected_date"
        android:gravity="center_vertical"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthCalendar" />

    <!-- ds ngay (chip)  -->
    <HorizontalScrollView
        android:id="@+id/dateScroll"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:fillViewport="true"
        android:paddingHorizontal="10dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedDate">

        <LinearLayout
            android:id="@+id/llDateContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- WeekView -->
    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dateScroll"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


