<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Curriculum.CurriculumActivity">

    <!-- APP BAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurface"
            app:titleCentered="true"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Chương Trình Đào Tạo"
            app:titleTextColor="?attr/colorOnSurface" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- NỘI DUNG -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- THANH CHỨC NĂNG MỚI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <!-- SEARCH VIEW LÀM GỌN & ĐẸP -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                app:iconifiedByDefault="false"
                app:queryHint="Tìm kiếm môn học..." />

            <!-- NÚT LỌC ĐẸP -->
            <ImageButton
                android:id="@+id/buttonFilter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Lọc"
                android:padding="10dp"
                android:src="@drawable/filter"
                app:tint="@color/blue" />

            <!-- NÚT SẮP XẾP -->
            <ImageButton
                android:id="@+id/buttonSort"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Sắp xếp"
                android:src="@drawable/az_sort"
                app:tint="@color/blue" />

        </LinearLayout>

        <!-- CARD BỘ LỌC -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/filtersCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/blue"
            app:strokeWidth="0.8dp"
            android:backgroundTint="#EEF2FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TIÊU ĐỀ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bộ lọc"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:paddingBottom="10dp" />

                <!-- HÀNG 1: Khoa + Nhóm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutFaculty"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="@string/filter_by_faculty"
                        app:hintTextColor="@color/blue"
                        app:boxStrokeColor="@color/blue">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteFaculty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:paddingVertical="8dp"
                            android:inputType="none"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutGroup"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android.hint="@string/filter_by_group"
                        app:hintTextColor="@color/blue"
                        app:boxStrokeColor="@color/blue">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:paddingVertical="8dp"
                            android:inputType="none"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- LOẠI MÔN -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutCourseType"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/filter_by_course_type"
                    app:hintTextColor="@color/blue"
                    app:boxStrokeColor="@color/blue">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteCourseType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                
                <!-- TRẠNG THÁI MÔN HỌC -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Trạng thái"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipNotStudied"
                        style="@style/CustomChipChoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa học" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStudying"
                        style="@style/CustomChipChoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang học" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStudied"
                        style="@style/CustomChipChoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã học" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- LIST -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCurriculum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/curriculum_item" />

    </LinearLayout>

    <include
        layout="@layout/navbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

