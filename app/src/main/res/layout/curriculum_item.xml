<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_border">

    <TextView
        android:id="@+id/tvMaHp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvHocKy"
        tools:text="COMP123" />

    <TextView
        android:id="@+id/tvTenHp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMaHp"
        tools:text="Tên môn học rất dài để kiểm tra hiển thị" />

    <TextView
        android:id="@+id/tvSoTinChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTenHp"
        tools:text="Tín chỉ: 3" />

    <TextView
        android:id="@+id/tvSoTietLyThuyet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tvSoTinChi"
        app:layout_constraintTop_toTopOf="@id/tvSoTinChi"
        tools:text="LT: 45" />

    <TextView
        android:id="@+id/tvSoTietThucHanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tvSoTietLyThuyet"
        app:layout_constraintTop_toTopOf="@id/tvSoTinChi"
        tools:text="TH: 0" />

    <TextView
        android:id="@+id/tvHocKy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Học kỳ: 1" />

    <TextView
        android:id="@+id/tvLoaiHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTenHp"
        tools:text="Bắt buộc" />

    <TextView
        android:id="@+id/tvNhomTuChon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSoTinChi"
        tools:text="Nhóm: Thể chất"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>