<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/layoutText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18/11/2025"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="end"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề ghi chú"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvNoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đây là phần nội dung của ghi chú"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgAnh"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:visibility="visible"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

</androidx.constraintlayout.widget.ConstraintLayout>
