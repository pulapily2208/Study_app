<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9EB">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:text="<  Back"
            android:textColor="#007AFF"
            android:textSize="25sp"
            android:background="null"/>
        <ImageView
            android:id="@+id/btnUndo"
            android:layout_marginTop="43dp"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/note_ic_undo"
            android:backgroundTint="#A09880" />

        <ImageView
            android:id="@+id/btnRedo"
            android:layout_marginTop="45dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/note_ic_redo"
            android:backgroundTint="#FFF9EB" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Save"
            android:textSize="25sp"
            android:backgroundTint="@color/blue"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtTitle"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="null"/>

            <EditText
                android:id="@+id/edtContent"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:background="null"
                android:textSize="25sp"
                android:hint="Note here..."/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/note_bottom_bar_bg"
        android:paddingHorizontal="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/note_ic_text"
            android:backgroundTint="#2D332F"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/note_ic_checklist"
            android:backgroundTint="#2D332F"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/note_ic_mic"
            android:backgroundTint="#2D332F"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/note_ic_pen"
            android:backgroundTint="#2D332F"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/note_ic_image"
            android:backgroundTint="#2D332F"/>


        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/note_ic_style"
            android:backgroundTint="#2D332F"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>